<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/global.css" type="text/css"?>
<dialog id="lasuli-options-dialog"
      persist="screenX screenY width height"
      xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
      autosize="true"
      resizable="no"
      title="RÃ©glages du serveur Hypertopic"
      buttons="accept,cancel"
      onload="onLoad();"
      ondialogaccept="return onOK();">

  <script type="application/x-javascript" src="chrome://lasuli/content/js/lasuli.js"/>
  <script type="application/x-javascript" src="chrome://lasuli/content/js/lasuli.dialog.js"/>
  <vbox flex="1">
    <groupbox>
      <caption id="options.dialog.header" label="Service Hypertopic" />
      <hbox>
        <label id="options.dialog.url" value="URL:"/>
        <textbox id="txtBaseUrl" flex="1"/>
      </hbox>
      <hbox>
        <label id="options.dialog.user" value="Utilisateur :"/>
        <textbox id="txtUser" flex="1"/>
        <label id="options.dialog.pass" value="Mot de passe :"/>
        <textbox id="txtPass" type="password" flex="1"/>
      </hbox>
    </groupbox>
    <hbox align="right">
      <button dlgtype="accept" label="Ok" id="options.dialog.accept"/>
      <button dlgtype="cancel" label="Annuler" id="options.dialog.cancel"/>
    </hbox>
  </vbox>
</dialog>