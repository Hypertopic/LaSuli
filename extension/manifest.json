{
  "name": "LaSuli",
  "description": "Social annotation for qualitative analysis.",
  "version": "3.0.3",

  "manifest_version": 2,
  "applications": {
    "gecko": {
      "strict_min_version": "52.0"
    }
  },

  "browser_action": {
    "browser_style": true,
    "default_area" : "navbar",
    "default_icon" : "button/laSuli-32-grey.png",
    "default_title": "LaSuli"
  },

  "sidebar_action": {
    "default_title": "LaSuli",
    "default_icon" : "button/laSuli-32.png",
    "default_panel": "/page/sidebar.html"
  },

  "options_ui": {
    "page": "page/settings.html"
  },

  "background": {
    "scripts" : [
      "/dist/background.js"
    ]
  },

  "icons": {
    "32" : "icons/laSuli-32.png"
  },

  "permissions": [
    "webRequest",
    "<all_urls>",
    "activeTab",
    "storage",
    "tabs",
    "contextMenus",
    "notifications"
  ]
}
